<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.juwuheback.mapper.ArticlesMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="ArticlesVOMap" type="com.example.juwuheback.domain.vo.ArticlesVO" autoMapping="true">
        <id column="article_id" property="articleId"/>
        <collection property="labelVOList" ofType="com.example.juwuheback.domain.vo.LabelVO" autoMapping="true">
            <id column="label_id" property="labelId"/>
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Articles_Column_List">
        art
        .
        article_id
        ,
        art.article_title,
        art.article_content,
        art.article_views,
        art.article_comment_count,
        art.article_date
    </sql>
    <sql id="Label_Column_List">
        la
        .
        label_id
        ,
        la.label_name,
        la.label_description
    </sql>

    <insert id="insertArticlesLabel">
        insert into
        articles_label (article_id,label_id)
        values
        <foreach item="item" collection="labelList" separator=",">
            (
            #{articlesId},
            #{item}
            )
        </foreach>
    </insert>

    <insert id="insertArticlesClassify">
        insert into articles_classify (article_id, classify_id)
        values (#{articlesId}, #{articlesId})
    </insert>

    <select id="selectAllArticles" resultMap="ArticlesVOMap">
        SELECT
        <include refid="Articles_Column_List"></include>,
        <include refid="Label_Column_List"></include>
        FROM
        articles AS art
        LEFT JOIN
        articles_label
        ON
        art.article_id = articles_label.article_id
        LEFT JOIN
        labels AS la
        ON
        articles_label.label_id = la.label_id
        <where>
            <if test=" articlesQueryDTO.articleId != null ">
                and art.article_id = #{articlesQueryDTO.articleId}
            </if>
            <if test=" articlesQueryDTO.articleId != null ">
                and art.article_id like ('%'#{articlesQueryDTO.articleId}'%')
            </if>
            <if test=" articlesQueryDTO.startTime != null and articlesQueryDTO.endTime != null">
                and art.article_date between #{articlesQueryDTO.startTime} and #{articlesQueryDTO.endTime}
            </if>
            <if test=" articlesQueryDTO.labelName != null ">
                and la.label_name like ('%'#{articlesQueryDTO.labelName}'%')
            </if>
        </where>
    </select>


    <select id="selectAllByLabel" resultMap="ArticlesVOMap">
        SELECT
        <include refid="Articles_Column_List"></include>,
        <include refid="Label_Column_List"></include>
        FROM
        articles AS art
        LEFT JOIN
        articles_label
        ON
        art.article_id = articles_label.article_id
        LEFT JOIN
        labels AS la
        ON
        articles_label.label_id = la.label_id
        <where>
            <if test=" articlesQueryDTO.labelId != null ">
                art.article_id IN
                (
                SELECT
                al.article_id
                FROM
                articles_label al
                WHERE
                al.label_id = #{articlesQueryDTO.labelId}
                )
            </if>
            <if test=" articlesQueryDTO.labelName != null ">
                and la.label_name = #{articlesQueryDTO.labelName}
            </if>
        </where>
        ORDER BY art.article_date DESC
    </select>

</mapper>
